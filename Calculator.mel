global proc int Median(float $input[])
{
    float $length = size($input);
    int $mid = $length / 2;


    print("The Median of ");
    for ($i = 0; $i < $length; $i++ )
    {
        print($input[$i] + " , ");
    }
    print("is ");
    return ($mid);
}

global proc float Mean(float $input[])
{
    float $length = size($input);
    float $sum = 0;

    print("The Mean of ");
    
    for($i = 0; $i < $length; $i++)
    {
        $sum = $sum + $input[$i];
        print($input[$i] + " , ");
    }
    $sum = $sum/$length;
    print("is ");
    return ($sum);
    
}

