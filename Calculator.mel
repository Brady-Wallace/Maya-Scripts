global proc float Divison(float $input[])
{
    float $length = size($input);
    float $sum = 1.0;

    for ($i = 0; $i < $length; $i++)
    {
        if ($i == $length - 1)
        {
            print($input[$i] + " = ");
        }
        else
        {
            print($input[$i] + " / ");
        }
        $sum = $sum / $input[$i];
    }
    return ($sum); 
}

global proc float Mutiply(float $input[])
{
    float $length = size($input);
    float $sum = 1.0;

    for ($i = 0; $i < $length; $i++)
    {
        if ($i == $length - 1)
        {
            print($input[$i] + " = ");
        }
        else
        {
            print($input[$i] + " * ");
        }
        $sum = $sum * $input[$i];
    }
    return ($sum); 
}

global proc float Subtraction(float $input[])
{
    float $length = size($input);
    float $sum = 0.0;

    for ($i = 0; $i < $length; $i++)
    {
        if ($i == $length - 1)
        {
            print($input[$i] + " = ");
        }
        else
        {
            print($input[$i] + " - ");
        }
        $sum = $sum - $input[$i];
    }
    return ($sum); 
}

global proc float Addition(float $input[])
{
    float $length = size($input);
    float $sum = 0.0;

    for ($i = 0; $i < $length; $i++)
    {
        if ($i == $length - 1)
        {
            print($input[$i] + " = ");
        }
        else
        {
            print($input[$i] + " + ");
        }
        $sum = $sum + $input[$i];
    }
    return ($sum);
}

global proc Calculator(int $operation, float $input[])
{
    if ($operation == 1)
    {
      print  (Addition($input));
    }

    if ($operation == 2)
    {
      print  (Subtraction($input));
    }
    
    if ($operation == 3)
    {
      print  (Mutiply($input));
    }
        
    if ($operation == 4)
    {
      print  (Divison($input));
    }

    if ($operation == 5)
    {
      print  (Power($input));
    }

    if ($operation == 6)
    {
      print  (Mean($input));
    }

    if ($operation == 7)
    {
      print  (Median($input));
    }

    
}
